<?xml version="1.0"?>
<odoo>
    <record id="view_purchase_landed_cost_form" model="ir.ui.view">
        <field name="model">stock.valuation.adjustment</field>
        <field name="inherit_id" ref="stock.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe-stat_button" icon="fa-money" type="action" name="%(action_list_purchase_costing_items)d" >
                    <field name="landed_costs" string=" Landed Costs" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
    
</odoo>